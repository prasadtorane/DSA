public class Main {
  public static void main(String[] args) {
    int n = 5;
    for(int rows = 1; rows <= 2*n - 1; rows++) {
      int totalCols = rows > n ? 2*n - rows: rows;
      for(int cols = 1; cols <= totalCols; cols++) {
        System.out.print("*");
      }
      System.out.println("");
    }
  }
}
